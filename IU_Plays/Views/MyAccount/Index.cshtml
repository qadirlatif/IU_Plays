@model IU_Plays.Models.login

@{
    ViewBag.Title = "Index";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table width="100%" class="">
        <tr style="height: 100px">
        </tr>
        <tr width="100%">
            <td width="30%"></td>
            <td>
                <div id="logo"><img src="~/Assets/logo.png" alt=""></div>
            </td>
            <td width="30%"></td>
        </tr>
        <tr width="100%">
            <td width="30%"></td>
            <td style="color: grey; font-size: 18px;">EMAIL:</td>
            <td width="30%"></td>
        </tr>
        <tr width="100%">
            <td width="30%">@Html.ValidationSummary(true, "", new { @class = "text-danger" })</td>
            <td>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </td>
            <td width="30%"></td>
        </tr>
        <tr height="10px"></tr>
        <tr width="100%">
            <td width="30%"></td>
            <td style="color: grey; font-size: 18px;">PASSWORD:</td>
            <td width="30%"></td>
        </tr>
        <tr width="100%">
            <td width="30%"></td>
            <td width="40%">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "", @Type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </td>
            <td width="30%"></td>
        </tr>
        <tr height="20px"></tr>
        <tr>
            <td width="30%"></td>
            <td>
                <div style="display: flex; width: 100%;">
                    <div style="width: 75%;">
                        <button type="submit">Login</button>
                    </div>
                    <div>
                        <a href="">Forgot Password?</a>
                    </div>


                </div>
            </td>
            <td width="30%"></td>
        </tr>
        <tr height="20px"></tr>


    </table>
}